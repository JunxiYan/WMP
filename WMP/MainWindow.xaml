<Window
    x:Class="WMP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WMP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WMP"
    Width="400"
    Height="450"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="Button_Click_1" Content="File" />
            <Button Content="diretory" />
        </StackPanel>
        <MediaElement
            x:Name="mediaElement"
            LoadedBehavior="Manual"
            MediaOpened="mediaElement_MediaOpened"
            Source=""
            Volume="{Binding ElementName=sliderVolume, Path=Value}" />

        <Image x:Name="MusicImage" Grid.Row="1" />
        <Button
            x:Name="buttonPlay"
            Grid.Row="2"
            Width="30"
            Height="30"
            HorizontalAlignment="Center"
            Background="Black"
            Click="button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="CornerRadius" Value="20" />
                </Style>
            </Button.Resources>
        </Button>
        <Slider
            x:Name="sliderVolume"
            Grid.Row="2"
            Width="164"
            Height="18"
            Margin="10"
            VerticalAlignment="Bottom"
            Maximum="1"
            Minimum="0"
            Value="0.5" />

        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <Slider
                x:Name="sliderPosition"
                Grid.Row="2"
                Margin="10"
                VerticalAlignment="Top"
                ValueChanged="sliderPosition_ValueChanged" />
            <Label
                x:Name="label2"
                HorizontalAlignment="Center"
                Content="{Binding Value, ElementName=sliderPosition}"
                FontSize="10" />
        </StackPanel>

    </Grid>
</Window>
